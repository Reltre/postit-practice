<%= render 'shared/errors', obj: @category %>

<div class='row'>
  <div class='well span6'>
    <%= form_for @category do |f| %>
      <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>
      
      <%= f.submit 'Create Category', class: 'btn btn-success' %>
    <% end %> 
  </div>
</div>