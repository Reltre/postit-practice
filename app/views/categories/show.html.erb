<% header = %>
<% link_to("All Posts" , posts_path) +
   " &raquo; #{@category.name}".html_safe 
%>                         
<%= render 'shared/content_title', title: "#{header}".html_safe %>
<% if @category.posts.empty? %>
  <h4>There are no Posts under <%= "#{@category.name}" %></h4>
<% else %>  
  <%= render @category.posts %>  
<% end %>

