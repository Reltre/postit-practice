
<% @category = Category.find(params[:id]) %>
<% if @category.post_categories.empty? %>
  <h4>There are no Posts under this Category</h4>
<% else %>
  <% @posts = %>
  <% @category.post_categories.map do |post_cat| %>
    <% next if post_cat.post_id == nil %>
    <% Post.find(post_cat.post_id) %>
  <% end %>
    <%= render @posts %>  
<% end %>
