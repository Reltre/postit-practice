
<ul class="nav">
  <li><%= link_to "Postit!", root_path, :class => 'brand' %></li>  
  <li>
    <div class='nav-item btn-group' id="category">
      <a class="btn dropdown-toggle" data-toggle='dropdown' href='#'> 
        Categories
        <span class='caret'></span> 
      </a>
      <ul class='dropdown-menu'>
        <% Category.all.each do |category| %> 
          <li><%= link_to category.name, category_path(category) %></li>
        <% end %>
        <li class='divider'></li>
        <li>
          <%= link_to new_category_path do %>
            <i class='icon-plus'> </i> 
            New Category 
          <% end %>
        </li>
      </ul>
    </div>
  </li>
  <li>
    <div class='nav-item' >
      <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
    </div>
  </li>
  <li>
    <div class='nav-item' >
      <%= link_to 'Register', register_path, class: 'btn btn-small' %>
    </div>
  </li>
  <% if logged_in? %>
    <li>
      <div class='nav-item'>
        <%= link_to 'Log Out', logout_path, class: 'btn btn-small' %>
      </div>
    </li>
  <% else %>
    <li>
      <div class='nav-item'>
        <%= link_to 'Log in', login_path, class: 'btn btn-small' %>
      </div>
    </li>
  <% end %>
</ul>

