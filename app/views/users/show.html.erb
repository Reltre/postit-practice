<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>
<div class="well">
  <div class="dl-horizontal">
    <dt>Username:</dt>
    <dd><%= @user.username %></dt> 
  </div>
</div>  
<h5 id="user_activity_title"><%= @user.username %>'s Activity</h5>
<ul class="nav nav-tabs">
  <li class="active"> 
    <%= link_to "Posts (#{@user.posts.size})", "#posts", 'data-toggle' => 'tab'  %>
  </li>
  <li>
    <%= link_to "Comments (#{@user.comments.size})", "#comments", 'data-toggle' => 'tab' %> 
  </li>
</ul>
<br>
<div class="tab-content">
  <div class="tab-pane active" id="posts">
    <%= render @user.posts %>
  </div>
  <div class="tab-pane" id="comments">
    <%= render @user.comments, user_page: true %>
  </div>
</div>