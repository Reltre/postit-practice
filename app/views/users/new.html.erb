
<%= render 'shared/content_title', title: 'Register' %>
<%= # render 'shared/errors', obj: @user  %>

<%= form_tag "/users" do %>
  <div class="control-group">
    <%= label_tag(:username, 'username') %>
    <%= text_field_tag :username %>
  </div>

  <div class="control-group">
    <%= label_tag(:password, 'password') %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag 'Register' %>
<% end %>